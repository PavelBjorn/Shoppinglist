<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    >
    <EditText
        android:id="@+id/dialog_add_edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:drawable/editbox_background"
        android:hint="Stuff name"
        android:layout_marginTop="8dp"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dialog_add_edt_number_of_goods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:drawable/editbox_background"
            android:hint="Number of goods"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:singleLine="true" />
        <Spinner
            android:id="@+id/dialog_add_sp_units"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <EditText
            android:id="@+id/dialog_add_edt_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:drawable/editbox_background"
            android:hint="Price"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:singleLine="true"
            android:enabled="false"/>

    </LinearLayout>


    <EditText
        android:id="@+id/dialog_add_edt_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:drawable/editbox_background"
        android:hint="Comments"
        android:inputType="textMultiLine"
        android:lines="3"
        android:gravity="top|left"
        android:singleLine="true" />
</LinearLayout>