<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/myActionBar_size"
    android:background="@color/myActionBar_bg_color"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/imbtn_open_drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/btn_menu_selector"
        android:src="@drawable/btn_open_drawer"
        android:layout_gravity="center|left"/>

    <FrameLayout
        android:animateLayoutChanges="true"
        android:id="@+id/ll_myActionBar_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|left"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="50dp"
        >

    </FrameLayout>
    <ImageButton
        android:id="@+id/imbtn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginBottom="@dimen/imbtn_menu_marginBottom"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/imbtn_menu_marginTop"
        android:background="@drawable/btn_menu_selector"
        android:src="@drawable/btn_search" />

    <ImageButton
        android:id="@+id/imbtn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginBottom="@dimen/imbtn_menu_marginBottom"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/imbtn_menu_marginTop"
        android:background="@drawable/btn_menu_selector"
        android:src="@drawable/btn_menu" />

    <FrameLayout
        android:animateLayoutChanges="true"
        android:id="@+id/fl_action_bar_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
    </FrameLayout>

</FrameLayout>